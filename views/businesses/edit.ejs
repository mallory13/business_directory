<%- include ../partials/header.ejs %>

<main class="container">
    <h1>Business Details</h1>
    <form method="post" action="<%= directory._id %>">
        <fieldset class="form-group">
            <label for="busName" class="col-sm-2">Business Name: *</label>
            <input name="busName" id="busName" required />
        </fieldset>
        <fieldset class="form-group">
            <label for="contact" class="col-sm-2">Contact Name: *</label>
            <input name="contact" id="contact" required />
        </fieldset>
        <fieldset class="form-group">
            <label for="phone" class="col-sm-2">Phone Number: *</label>
            <input name="phone" id="phone" required />
        </fieldset>
        <fieldset class="form-group">
            <label for="address" class="col-sm-2">Address: *</label>
            <input name="address" id="address" required />
        </fieldset>
        <fieldset class="form-group">
            <label for="website" class="col-sm-2">Website: *</label>
            <input name="website" id="website" required />
        </fieldset>
        <fieldset class="form-group">
            <label for="file">Select your image:</label>
            <input type="file" name="file" id="file" />
            <span class="hint">Supported files: jpg, jpeg, png.</span>
            <button type="submit">upload</button>
        </fieldset>
        <div>
            <%= directory.created %>
        </div>
        <button class="btn btn-primary col-sm-offset-2">Save</button>

        <a href="/directory/delete/<%= directory._id %>" title="Delete" class="confirmation">
            <button class="btn btn-danger" type="button">Delete</button>
        </a>
    </form>
</main>

<%- include ../partials/footer.ejs %>